<Page x:Class="Project_Gravitation.Pages.Arrow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_Gravitation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Arrow">

    <Grid Background="Silver">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button FontSize="35" Margin="10" Background="MintCream" Content="Start" Height="100" Width="200" Click="Button_Click"/>
            <Button FontSize="35" Margin="10" Background="MintCream" Content="Back" Height="100" Width="200"/>
        </StackPanel>
    </Grid>
</Page>
