<Page x:Class="Project_Gravitation.Pages.Items"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_Gravitation.Pages"
        xmlns:mclass="clr-namespace:Project_Gravitation.Classes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Items">
    <Page.Resources>
        <Style x:Key="ItemBtn" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="200"/>
            <Setter Property="Width" Value="200"/>
        </Style>
    </Page.Resources>

    <Grid  Background="White">
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center">
            <mclass:MyButton  Style="{StaticResource ItemBtn}" Click="MyButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="100"/>
                    </Style>
                </Button.Resources>
        
                <Grid>
    
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Image Grid.Row="0" Source="/Pages/flash.jpg"/>

                    <TextBlock Background="LightGray" Grid.Row="1" Text="test TxT"/>

                </Grid>
                
            </mclass:MyButton>
            <mclass:MyButton Style="{StaticResource ItemBtn}" Height="200" Width="200" Click="MyButton_Click">
                <Image Margin="30" Source="/Pages/flash.jpg"></Image>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="100"/>
                    </Style>
                </Button.Resources>
            </mclass:MyButton>
            <mclass:MyButton Style="{StaticResource ItemBtn}" Height="200" Width="200" Click="MyButton_Click">
                <Image Margin="30" Source="/Pages/flash.jpg"></Image>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="100"/>
                    </Style>
                </Button.Resources>
            </mclass:MyButton>
            

        </StackPanel>
       
    </Grid>
</Page>
